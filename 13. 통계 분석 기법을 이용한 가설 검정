         method = "color",       # ìƒ‰ìƒ í‘œí˜„
         col = col(200),         # ìƒ‰ìƒ ë‹¨ê³„ ìˆ˜
         type = "lower",         # í•˜ì‚¼ê°í–‰ë ¬ë§Œ í‘œì‹œ
         order = "hclust",       # êµ°ì§‘í™” ìˆœì„œëŒ€ë¡œ ì •ë ¬
         addCoef.col = "black",  # ìƒê´€ê³„ìˆ˜ ìˆ«ì í‘œì‹œ
         tl.col = "black",       # ë³€ìˆ˜ëª… ìƒ‰ìƒ
         tl.srt = 45,            # ë³€ìˆ˜ëª… íšŒì „ ê°ë„
         diag = FALSE)           # ëŒ€ê°ì„  ì œê±°

â–¶ ìƒ‰ì´ ì§„í• ìˆ˜ë¡ ìƒê´€ì„±ì´ ë†’ê³ , ìŒìˆ˜-ì–‘ìˆ˜ ë°©í–¥ì„±ë„ ì§ê´€ì ìœ¼ë¡œ í‘œí˜„
